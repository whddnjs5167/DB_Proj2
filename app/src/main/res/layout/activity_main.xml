<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/nosmokingBnt"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginStart="12dp"
        android:background="#FF0006"
        android:padding="4dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/informBnt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917"
        app:srcCompat="@drawable/nosmokingarea" />

    <ImageButton
        android:id="@+id/smokingBnt"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginEnd="16dp"
        android:background="#009E45"
        android:padding="4dp"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/informBnt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/nosmokingBnt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.917"
        app:srcCompat="@drawable/smokingarea" />

    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="208dp"
        android:layout_height="86dp"
        android:layout_marginTop="88dp"
        android:text="DamDam"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/informBnt"
        android:layout_width="204dp"
        android:layout_height="229dp"
        android:layout_marginBottom="72dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/information2" />
</androidx.constraintlayout.widget.ConstraintLayout>